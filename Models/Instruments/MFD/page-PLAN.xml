<?xml version="1.0"?>


<PropertyList>
    <name>PLAN</name>
    <w-base>256</w-base>
    <h-base>256</h-base>

    <layers>
    
        <layer>
          <condition>
            <less-than>
              <property>instrumentation/radar/range</property>
              <value>10</value>
            </less-than>
          </condition>
            <name>ground network</name>
            <texture>
                <path>Aircraft/Instruments/Textures/od_groundradar.rgb</path>
                <x1>0</x1>
                <y1>0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
            <emissive>1</emissive>
            <transformations>
              <transformation>
                <type>rotation</type>
                <property>instrumentation/groundradar/airport/crs</property>
              </transformation>
              <transformation>
               <type>y-shift</type>
               <property>instrumentation/groundradar/airport/dist-norm</property>
               <scale>198</scale>
              </transformation>
              <transformation>
                <type>rotation</type>
                <property>instrumentation/groundradar/airport/crs</property>
                <scale>-1.0</scale>
              </transformation>
            </transformations>
            <w>512</w>
            <h>512</h>
        </layer>
    
        <layer>
            <name>hdg</name>
            <w>16</w>
            <h>16</h>
            <texture>
                <path>Aircraft/A320neo/Models/Instruments/MFD/res/symbols.png</path>
                <x1>0.050</x1>
                <y1>0.866</y1>
                <x2>0.174</x2>
                <y2>0.967</y2>
            </texture>
            <transformations>
                <transformation>
                    <type>y-shift</type>
                    <offset>118</offset>
                </transformation>
            </transformations>
            <emissive>true</emissive>
        </layer>

        <layer>
            <name>aircraft symbol</name>
            <w>25</w>
            <h>32</h>
            <texture>
                <path>Aircraft/A320neo/Models/Instruments/MFD/res/symbols.png</path>
                <x1>0.657</x1>
                <y1>0.621</y1>
                <x2>0.786</x2>
                <y2>0.793</y2>
            </texture>
            <transformations>
                <transformation>
                    <type>y-shift</type>
                    <offset>0</offset>
                </transformation>
                <transformation>
                    <type>rotation</type>
                    <property>orientation/heading-deg</property>
                </transformation>
            </transformations>
            <emissive>true</emissive>
        </layer>


        <layer>
            <condition>
                <greater-than>
                    <property>environment/wind-speed-kt</property>
                    <value>0.99</value>
                </greater-than>
            </condition>
            <name>wind arrow</name>
            <emissive>true</emissive>
            <w>6</w>
            <h>18</h>
            <texture>
                <path>Aircraft/A320neo/Models/Instruments/MFD/res/symbols.png</path>
                <x1>0.138</x1>
                <y1>0.555</y1>
                <x2>0.204</x2>
                <y2>0.776</y2>
            </texture>
           <transformations>
            <transformation>
                <type>y-shift</type>
                <offset>88</offset>
            </transformation>
            <transformation>
                <type>x-shift</type>
                <offset>-105</offset>
            </transformation>
            <transformation>
                <type>rotation</type>
                <property>orientation/heading-magnetic-deg</property>
                <scale>-1</scale>
            </transformation>
            <transformation>
                <type>rotation</type>
                <property>environment/wind-from-heading-deg</property>
            </transformation>
          </transformations>
        </layer>

</layers>

</PropertyList>
