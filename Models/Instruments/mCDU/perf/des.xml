	<animation>
		<type>select</type>
		<object-name>selected-label</object-name>
		<condition>
			<and>
				<equals>
					<property>flight-management/phase</property>
					<value>DES</value>
				</equals>
				<equals>
					<property>flight-management/control/spd-ctrl</property>
					<value>man-set</value>
				</equals>
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>selected-spd</object-name>
		<condition>
			<and>
				<equals>
					<property>flight-management/phase</property>
					<value>DES</value>
				</equals>
				<equals>
					<property>flight-management/control/spd-ctrl</property>
					<value>man-set</value>
				</equals>
				<equals>
					<property>flight-management/control/spd-mode</property>
					<value>ias</value>
				</equals>
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>selected-mach</object-name>
		<condition>
			<and>
				<equals>
					<property>flight-management/phase</property>
					<value>DES</value>
				</equals>
				<equals>
					<property>flight-management/control/spd-ctrl</property>
					<value>man-set</value>
				</equals>
				<equals>
					<property>flight-management/control/spd-mode</property>
					<value>mach</value>
				</equals>
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>managed-spd</object-name>
		<condition>
			<greater-than>
				<property>/flight-management/spd-manager/descent/managed-speed</property>
				<value>1.0</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>managed-spd-mach</object-name>
		<condition>
			<less-than-equals>
				<property>/flight-management/spd-manager/descent/managed-speed</property>
				<value>1.0</value>
			</less-than-equals>
		</condition>
	</animation>
	
