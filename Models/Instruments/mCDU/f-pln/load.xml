	<path>load.ac</path>
	
	<!-- mCDU Display Brightness -->
	
	<animation>
		<type>material</type>
		<object-name>white</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop>/instrumentation/mcdu/brt</factor-prop>
		</emission>
	</animation>
	
	<!-- Button Pick Animations -->
	
