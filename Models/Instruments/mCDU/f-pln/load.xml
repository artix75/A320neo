					if(!invert)
						setprop("/instrumentation/mcdu/load_rtes/first", first + 5);
					else {
						if (first != 0) setprop("/instrumentation/mcdu/load_rtes/first", first - 5);
					}
					mcdu.user.update_disp();
				</script>
            </binding>
        </action>
	</animation>
	
