	<!-- Arrows -->
	
	<animation>
		<type>pick</type>
		<object-name>u_arrow</object-name>
		<action>
            <button>0</button>
	   		<repeatable type="bool">false</repeatable>
            <binding>
				<command>nasal</command>
		 		<script>
		 		
		 			var first = getprop("/flight-management/procedures/star/first");
					var invert = getprop('aircraft-config/saved/mcdu/invert-arrow-keys') or 0;
					if(!invert){
						if (first != 0)
							setprop("/flight-management/procedures/star/first", first - 4);
					} else {
						var max = getprop("/flight-management/procedures/star/stars");

						if (max > first + 4)
							setprop("/flight-management/procedures/star/first", first + 4);
					}
		 				
		 			mcdu.star.update_stars();
		 			
				</script>
            </binding>
        </action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>d_arrow</object-name>
		<action>
            <button>0</button>
	   		<repeatable type="bool">false</repeatable>
            <binding>
				<command>nasal</command>
		 		<script>
		 		
		 			var first = getprop("/flight-management/procedures/star/first");
					var invert = getprop('aircraft-config/saved/mcdu/invert-arrow-keys') or 0;
					if(!invert){
						var max = getprop("/flight-management/procedures/star/stars");

						if (max > first + 4)
							setprop("/flight-management/procedures/star/first", first + 4);
					} else {
						if (first != 0)
							setprop("/flight-management/procedures/star/first", first - 4);
					}
		 				
		 			mcdu.star.update_stars();
		 			
				</script>
            </binding>
        </action>
	</animation>
	
